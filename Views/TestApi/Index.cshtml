</div>

@section Scripts {
    <script>
        // Sayfa yÃ¼klendiÄŸinde cari listesini yÃ¼kle
        document.addEventListener("DOMContentLoaded", () => {
            loadCariler();
        });

        // Cari listesini yÃ¼kle
        async function loadCariler() {
            const tbody = document.querySelector("#cariTable tbody");
            tbody.innerHTML = "<tr><td colspan='5' class='text-center py-3'><span class='spinner-border spinner-border-sm'></span> YÃ¼kleniyor...</td></tr>";

            try {
                const res = await fetch("/TestApi/ListCariler");
                const data = await res.json();

                if (Array.isArray(data)) {
                    tbody.innerHTML = "";
                    
                    if (data.length === 0) {
                        tbody.innerHTML = "<tr><td colspan='5' class='text-center py-3 text-muted'>KayÄ±t bulunamadÄ±</td></tr>";
                        return;
                    }

                    data.forEach(item => {
                        const temel = item.CariTemelBilgi || {};
                        const kod = temel.CARI_KOD ?? "";
                        const isim = temel.CARI_ISIM ?? "";
                        const tel = temel.CARI_TEL ?? "-";
                        const il = temel.CARI_IL ?? "-";

                        tbody.innerHTML += `
                            <tr>
                                <td><code>${kod}</code></td>
                                <td>${isim}</td>
                                <td>${tel}</td>
                                <td>${il}</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary selectCari"
                                        data-kod="${kod}"
                                        data-isim="${isim}"
                                        data-tel="${tel}"
                                        data-il="${il}"
                                        title="Formlara Doldur">
                                        <i class="bi bi-check2-square"></i>
                                    </button>
                                </td>
                            </tr>`;
                    });
                } else {
                    tbody.innerHTML = "<tr><td colspan='5' class='text-center text-danger py-3'>Beklenmeyen veri formatÄ±</td></tr>";
                }
            } catch (e) {
                tbody.innerHTML = `<tr><td colspan='5' class='text-center text-danger py-3'>Hata: ${e.message}</td></tr>`;
            }
        }

        // SatÄ±r seÃ§ildiÄŸinde form alanlarÄ±nÄ± doldur
        document.addEventListener("click", e => {
            if (e.target.classList.contains("selectCari") || e.target.parentElement.classList.contains("selectCari")) {
                const btn = e.target.classList.contains("selectCari") ? e.target : e.target.parentElement;
                
                // Update form
                document.querySelector("#updateKod").value = btn.dataset.kod;
                document.querySelector("#updateIsim").value = btn.dataset.isim;
                document.querySelector("#updateTel").value = btn.dataset.tel === "-" ? "" : btn.dataset.tel;
                document.querySelector("#updateIl").value = btn.dataset.il === "-" ? "" : btn.dataset.il;
                document.querySelector("#updateMail").value = "";
                
                // Delete form
                document.querySelector("#deleteKod").value = btn.dataset.kod;
                
                // GÃ¶rsel feedback
                btn.classList.remove("btn-outline-primary");
                btn.classList.add("btn-success");
                setTimeout(() => {
                    btn.classList.remove("btn-success");
                    btn.classList.add("btn-outline-primary");
                }, 1000);
            }
        });
    </script>
}
