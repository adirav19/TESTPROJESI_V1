                <div class="card-body">
                    <form id="updateCariForm" asp-controller="TestApi" asp-action="UpdateCari" method="post">
                        <div class="mb-2">
                            <input id="updateKod" name="cariKodu" class="form-control" placeholder="Cari Kodu" required />
